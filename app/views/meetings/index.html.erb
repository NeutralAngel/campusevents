<h1>Meetings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Event</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= meeting.description %></td>
        <td><%= meeting.start_time.strftime('%m-%d-%Y %I:%M%p') %></td>
        <td><%= meeting.end_time.strftime('%m-%d-%Y %I:%M%p') %></td>
        <td><%= meeting.event_name %></td>
        <td><%= meeting.location_name %></td>
        <td><%= link_to 'Show', meeting %><br>
            <%= link_to 'Edit', edit_meeting_path(meeting) %><br>
            <%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path, class: 'button' %>
