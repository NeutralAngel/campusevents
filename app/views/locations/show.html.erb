<h1><%= @location.name %></h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @location.description %>
</p>

<p>
  <strong>Latitude:</strong>
  <%= @location.latitude %>
</p>

<p>
  <strong>Longitude:</strong>
  <%= @location.longitude %>
</p>

<p class="map-url">
  <strong>Map url:</strong>
  <%= @location.map_url %>
</p>

<div class="navigation">
  <%= link_to 'Edit', edit_location_path(@location) %> |
  <%= link_to 'Back', locations_path %>
</div>

<% content_for(:sidebar) do %>
  <% @sidebar_title = "Meetings" %>
  <table class="large-sidebar">
    <thead>
      <tr>
        <th>Name</th>
        <th>Location</th>
        <th>Start Time</th>
        <th>End Time</th>
      </tr>
    </thead>
    <tbody>
      <% @location.next_five_meetings.each do |meeting| %>
        <tr>
          <td><%= meeting.name %></td>
          <td><%= meeting.location_name %></td>
          <td><%= meeting.start_time.strftime('%m-%d-%Y %I:%M%p') %></td>
          <td><%= meeting.end_time.strftime('%m-%d-%Y %I:%M%p') %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
<% end %>
